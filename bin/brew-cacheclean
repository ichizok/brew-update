#!/bin/sh
set -eu

readonly HOMEBREW_CACHE="${HOME}/Library/Caches/Homebrew"

cd "${HOMEBREW_CACHE}"

DOWNLOADS_SIZE="$(du -hs downloads | awk '{print$1}')"
readonly DOWNLOADS_SIZE

echo "Downloads size: ${DOWNLOADS_SIZE}"

proc_start() {
    printf "\e[34m==>\e[0m \e[1m"
}

proc_end() {
    printf "\e[0m\n"
}

proc_start

if [ "${DOWNLOADS_SIZE}" = 0B ]; then
    printf "No bottle."
else
    printf "Removing bottles... "
    rm downloads/*
    printf "done."
fi

proc_end

proc_start

printf "Removing broken symlink files... "
find -L . Cask -maxdepth 1 -type l -exec rm -f '{}' +
printf "done."

proc_end
